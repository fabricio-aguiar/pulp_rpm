{
  "pulp": {
    "auth": [
      "admin",
      "password"
    ],
    "selinux enabled": false,
    "version": "3"
  },
  "hosts": [
    {
      "hostname": "pulp.example.com",
      "roles": {
        "api": {
          "port": 80,
          "scheme": "http",
          "service": "nginx"
        },
        "content": {
          "port": 80,
          "scheme": "http",
          "service": "pulp_content_app"
        },
        "pulp resource manager": {},
        "pulp workers": {},
        "redis": {},
        "shell": {
          "transport": "docker",
          "container": "pulp.example.com"
        }
      }
    }
  ],
  "custom": {
    "fixtures_origin": "http://pulp-fixtures/"
  }
}
